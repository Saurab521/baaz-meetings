<!doctype html>
<html lang="hi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Baaz Bike — Room View</title>
  <style>
    :root{
      --brand-orange:#ff6a00;
      --bg:#0b0b0b;
      --card:#0f1720;
      --muted: #9ca3af;
      --white:#ffffff;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    html,body{height:100%;margin:0;background:linear-gradient(180deg,#030405 0%, #081018 100%);color:var(--white);}
    .wrap{display:flex;flex-direction:column;height:100vh;padding:28px;gap:18px;box-sizing:border-box;}
    header{display:flex;align-items:center;gap:18px}
    .logo{
      width:64px;height:64px;border-radius:10px;display:flex;align-items:center;justify-content:center;
      background:linear-gradient(135deg,var(--brand-orange),#ff8f3b);box-shadow:0 10px 30px rgba(255,106,0,0.12);
    }
    header .title{font-size:28px;font-weight:700}
    header .subtitle{color:var(--muted);font-size:14px}
    .main{display:grid;grid-template-columns: 1fr 420px;gap:24px;align-items:start;flex:1;min-height:0}
    .panel{background:rgba(255,255,255,0.03);border-radius:14px;padding:18px;box-shadow:0 8px 30px rgba(2,6,23,0.6);overflow:auto}
    .left .room-name{font-size:40px;font-weight:800;margin-bottom:6px}
    .status-pill{display:inline-block;padding:10px 14px;border-radius:999px;font-weight:700;margin-bottom:12px}
    .free{background:#073c20;color:#bdf7d1}
    .busy{background:#4a130f;color:#ffd6d0}
    .now-card{display:flex;flex-direction:column;gap:8px;padding:14px;border-radius:12px;background:linear-gradient(90deg, rgba(255,106,0,0.06), rgba(255,255,255,0.02))}
    .now-time{font-size:28px;font-weight:800}
    .now-title{font-size:20px}
    .next{margin-top:12px;color:var(--muted)}
    .schedule-list{margin-top:18px;display:flex;flex-direction:column;gap:10px}
    .sched-item{display:flex;justify-content:space-between;align-items:center;padding:12px;border-radius:10px;background:rgba(255,255,255,0.02)}
    .sched-item .meta{font-size:16px}
    .sched-item .who{color:var(--muted);font-size:13px}
    .right .stats{display:flex;flex-direction:column;gap:12px}
    .stat{padding:14px;border-radius:12px;background:linear-gradient(90deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01))}
    .big{font-size:36px;font-weight:800}
    .controls{display:flex;gap:10px;margin-top:6px}
    .btn{background:var(--brand-orange);border:none;color:white;padding:10px 14px;border-radius:10px;font-weight:700;cursor:pointer}
    .small{background:transparent;border:1px solid rgba(255,255,255,0.06);color:var(--white);padding:8px 12px;border-radius:10px;cursor:pointer}
    .error{background:#3b0b0b;padding:12px;border-radius:10px;color:#ffd6d0}
    footer{color:var(--muted);font-size:13px;text-align:center;margin-top:6px}
    @media (max-width:980px){
      .main{grid-template-columns:1fr; }
      .right{order:2}
    }
  </style>
</head>
<body>
  <div class="wrap" role="main">
    <header>
      <div class="logo" aria-hidden="true">
        <svg width="42" height="42" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Baaz Bike">
          <g transform="translate(6,6)" fill="#ffffff"><text x="8" y="30" font-size="18" font-weight="700">B</text></g>
        </svg>
      </div>
      <div>
        <div class="title" id="roomTitle">Room</div>
        <div class="subtitle" id="roomSubtitle">Baaz Bike — Full day schedule</div>
      </div>
      <div style="margin-left:auto;text-align:right">
        <div id="clock" style="font-weight:700;color:#e6e6e6"></div>
        <div style="font-size:12px;color:var(--muted)">Auto refresh every 30s</div>
      </div>
    </header>

    <div id="error" style="display:none" class="error"></div>

    <div class="main">
      <div class="panel left">
        <div class="room-name" id="roomNameLarge">—</div>
        <div id="statusPill" class="status-pill free">Loading…</div>

        <div class="now-card" style="margin-top:12px">
          <div style="display:flex;justify-content:space-between;align-items:center">
            <div>
              <div style="font-size:13px;color:var(--muted)">Current meeting</div>
              <div id="nowTitle" class="now-title">—</div>
              <div id="nowTime" class="now-time">—</div>
            </div>
            <div style="text-align:right">
              <div style="font-size:12px;color:var(--muted)">Ends in</div>
              <div id="countdown" class="big">—</div>
            </div>
          </div>
          <div class="next"><strong>Next:</strong> <span id="nextText">—</span></div>
        </div>

        <div class="schedule-list" id="scheduleList" aria-live="polite"></div>
      </div>

      <div class="panel right">
        <div class="stats">
          <div class="stat">
            <div style="font-size:13px;color:var(--muted)">Total meetings today</div>
            <div class="big" id="totalMeet">0</div>
          </div>

          <div class="stat">
            <div style="font-size:13px;color:var(--muted)">Busy / Free</div>
            <div style="display:flex;gap:8px;margin-top:8px">
              <div style="padding:10px;border-radius:10px;background:rgba(255,255,255,0.02)"><div style="font-weight:800" id="busyCount">0</div><div style="font-size:12px;color:var(--muted)">Busy</div></div>
              <div style="padding:10px;border-radius:10px;background:rgba(255,255,255,0.02)"><div style="font-weight:800" id="freeCount">0</div><div style="font-size:12px;color:var(--muted)">Free</div></div>
            </div>
          </div>

          <div class="stat">
            <div style="font-size:13px;color:var(--muted)">Controls</div>
            <div class="controls">
              <button class="btn" id="goFullscreen">Fullscreen</button>
              <button class="small" id="openIndex">Overview</button>
            </div>
          </div>
        </div>

        <div style="height:18px"></div>
        <div style="color:var(--muted);font-size:13px">Auto-refresh & live-ish display. Press <strong>Fullscreen</strong> for TV mode.</div>
      </div>
    </div>

    <footer>Baaz Bike — Meeting display · room view</footer>
  </div>

<script>
(function(){
  const ERR_EL = document.getElementById('error');
  const ROOM_TITLE = document.getElementById('roomTitle');
  const ROOM_NAME_LARGE = document.getElementById('roomNameLarge');
  const STATUS_PILL = document.getElementById('statusPill');
  const NOW_TITLE = document.getElementById('nowTitle');
  const NOW_TIME = document.getElementById('nowTime');
  const NEXT_TEXT = document.getElementById('nextText');
  const SCHEDULE_LIST = document.getElementById('scheduleList');
  const TOTAL_MEET = document.getElementById('totalMeet');
  const BUSY_COUNT = document.getElementById('busyCount');
  const FREE_COUNT = document.getElementById('freeCount');
  const CLOCK = document.getElementById('clock');
  const COUNTDOWN = document.getElementById('countdown');

  let API_BASE = null;
  let roomId = null;
  let data = null;
  let countdownInterval = null;

  function showError(msg){
    ERR_EL.style.display = 'block';
    ERR_EL.textContent = msg;
    console.error(msg);
  }
  function clearError(){
    ERR_EL.style.display = 'none';
    ERR_EL.textContent = '';
  }

  function qParam(name){
    const params = new URLSearchParams(location.search);
    return params.get(name);
  }

  function escapeHtml(s){ if(!s) return ''; return String(s).replace(/[&<>"']/g, m => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[m])); }

  async function loadConfig(){
    try{
      const r = await fetch('config.json', {cache:'no-store'});
      if(!r.ok) throw new Error('config.json not served (HTTP '+r.status+')');
      const cfg = await r.json();
      if(!cfg.API_URL) throw new Error('API_URL missing in config.json');
      API_BASE = cfg.API_URL.replace(/\/+$/,'');
    }catch(e){
      showError('Config load error: '+e.message);
      throw e;
    }
  }

  function formatTimeRange(m){
    if(!m) return '';
    return `${m.start || '--'} → ${m.end || '--'}`;
  }

  function parseHMToDate(hm){
    // hm like "14:30" -> Date object for today at that time (local)
    const [hh,mm] = (hm||'00:00').split(':').map(Number);
    const d = new Date();
    d.setHours(hh, mm, 0, 0);
    return d;
  }

  function startCountdown(endDate){
    if(countdownInterval) clearInterval(countdownInterval);
    function update(){
      const now = new Date();
      let diff = Math.max(0, Math.floor((endDate - now)/1000));
      const h = Math.floor(diff/3600); diff%=3600;
      const m = Math.floor(diff/60); const s = diff%60;
      COUNTDOWN.textContent = (h>0? h+'h ':'') + String(m).padStart(2,'0') + 'm ' + String(s).padStart(2,'0') + 's';
    }
    update();
    countdownInterval = setInterval(update, 1000);
  }

  function humanDateTimeISO(d){
    if(!d) return '';
    const hh = String(d.getHours()).padStart(2,'0');
    const mm = String(d.getMinutes()).padStart(2,'0');
    return `${hh}:${mm}`;
  }

  function renderRoomInfo(room){
    ROOM_TITLE.textContent = room.name || 'Room';
    ROOM_NAME_LARGE.textContent = room.name || '—';
    STATUS_PILL.className = 'status-pill ' + (room.status === 'free' ? 'free' : 'busy');
    STATUS_PILL.textContent = room.status === 'free' ? 'Free' : 'Busy';
  }

  function renderSchedule(meetings){
    SCHEDULE_LIST.innerHTML = '';
    if(!meetings || meetings.length===0){
      SCHEDULE_LIST.innerHTML = '<div style="color:var(--muted)">No meetings today</div>';
      TOTAL_MEET.textContent = '0';
      BUSY_COUNT.textContent = '0';
      FREE_COUNT.textContent = '0';
      NEXT_TEXT.textContent = '—';
      NOW_TITLE.textContent = '—';
      NOW_TIME.textContent = '—';
      COUNTDOWN.textContent = '—';
      return;
    }

    // sort by start time (assumed HH:MM)
    meetings.sort((a,b)=> (a.start||'00:00').localeCompare(b.start||'00:00'));
    const now = new Date();

    let current = null;
    let next = null;
    let busy = 0, free=0;

    // determine current and next
    for(let i=0;i<meetings.length;i++){
      const m = meetings[i];
      const start = parseHMToDate(m.start);
      const end = parseHMToDate(m.end);
      if(start <= now && now <= end){
        current = {...m, startDate:start, endDate:end};
        next = meetings[i+1] ? {...meetings[i+1], startDate:parseHMToDate(meetings[i+1].start)} : null;
        break;
      }
      if(start > now){
        next = {...m, startDate:start};
        // current still null
        break;
      }
    }

    if(!current && meetings.length>0){
      // if no current, then next is first future meeting we computed
      // or if none future, next remains null
    }

    // render list and counts
    meetings.forEach(m=>{
      const item = document.createElement('div');
      item.className = 'sched-item';
      item.innerHTML = `<div>
          <div class="meta"><strong>${escapeHtml(m.title||'Untitled')}</strong></div>
          <div class="who">${escapeHtml(m.organizer||'—')}</div>
        </div>
        <div style="text-align:right">
          <div style="font-weight:700">${escapeHtml(m.start)} — ${escapeHtml(m.end)}</div>
        </div>`;
      SCHEDULE_LIST.appendChild(item);
    });

    TOTAL_MEET.textContent = String(meetings.length);

    // compute busy/free based on meetings covering now
    const isBusy = !!current;
    BUSY_COUNT.textContent = isBusy ? '1' : '0';
    FREE_COUNT.textContent = isBusy ? '0' : '1';

    if(current){
      NOW_TITLE.textContent = current.title || 'Untitled meeting';
      NOW_TIME.textContent = `${current.start} — ${current.end}`;
      NEXT_TEXT.textContent = next ? `${next.start} · ${next.title}` : 'No more meetings';
      renderRoomInfo({name: data.name, status: 'busy'});
      startCountdown(current.endDate);
    } else {
      NOW_TITLE.textContent = 'No meeting right now';
      NOW_TIME.textContent = '-';
      NEXT_TEXT.textContent = next ? `${next.start} · ${next.title}` : 'No upcoming meetings';
      renderRoomInfo({name: data.name, status: 'free'});
      COUNTDOWN.textContent = '—';
      if(next){
        // optional: countdown to next meeting start
        startCountdown(next.startDate);
      }
    }
  }

  async function fetchRoom(){
    try{
      clearError();
      const resp = await fetch(API_BASE + '/api/rooms/' + roomId, {cache:'no-store'});
      if(!resp.ok) throw new Error('HTTP '+resp.status);
      const json = await resp.json();
      // expected: { id, name, status, meetings: [...] }
      data = json;
      renderRoomInfo(data);
      renderSchedule(data.meetings || []);
    }catch(e){
      showError('Failed to load room: '+e.message);
    }
  }

  function updateClock(){ CLOCK.textContent = new Date().toLocaleString(); }
  setInterval(updateClock, 1000);
  updateClock();

  // controls
  document.getElementById('goFullscreen').addEventListener('click', ()=>{
    const el = document.documentElement;
    if(el.requestFullscreen) el.requestFullscreen();
    else if(el.webkitRequestFullscreen) el.webkitRequestFullscreen();
  });
  document.getElementById('openIndex').addEventListener('click', ()=>{
    // go to overview (index.html)
    location.href = './index.html';
  });

  // init
  (async function init(){
    try{
      await loadConfig();
      // read room id from query param
      roomId = qParam('id') || qParam('room') || null;
      if(!roomId){
        showError('Room ID not provided. Use ?id=<roomId> in the URL (e.g., room.html?id=2).');
        return;
      }
      // initial fetch
      await fetchRoom();
      // periodic refresh (30s)
      setInterval(fetchRoom, 30000);
    }catch(e){
      // already shown
    }
  })();

})();
</script>
</body>
</html>
